{
  "manifest_version": 3,
  "name": "FlowTab â€“ Focus Timer, To-Do & Mindful New Tab",
  "version": "1.0.2",
  "description": "A productivity-focused new tab page with a focus timer, to-do list, and mindfulness features.",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "FlowTab Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
